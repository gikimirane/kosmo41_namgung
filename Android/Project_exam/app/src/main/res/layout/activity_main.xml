<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="PLACIDO COFFEE"
        android:textSize="25sp"
        android:textStyle="bold" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LOGIN 시 HAPPYORDER가 가능합니다!"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/emplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="loginClicked"
            android:text="login" />

        <Button
            android:id="@+id/join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="joinClicked"
            android:text="join" />
    </LinearLayout>

    <Button
        android:id="@+id/Navigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="naviClicked"
        android:text="PLACIDO INFO" />

    <LinearLayout
        android:id="@+id/orderlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="orderClicked"
            android:text="HAPPYCODE ORDER" />

        <Button
            android:id="@+id/orderlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="orderlistClicked"
            android:text="MY ORDERLIST" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logoutlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="logoutClicked"
            android:text="LOGOUT" />

        <Button
            android:id="@+id/admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="webBtnClicked"
            android:text="ADMINPAGE"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>